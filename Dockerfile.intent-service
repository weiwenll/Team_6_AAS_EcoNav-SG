FROM public.ecr.aws/lambda/python:3.11

RUN yum install -y gcc gcc-c++ make wget tar gzip git

RUN cd /tmp && \
    wget -q https://github.com/Kitware/CMake/releases/download/v3.25.1/cmake-3.25.1-linux-x86_64.tar.gz && \
    tar -xzf cmake-3.25.1-linux-x86_64.tar.gz && \
    cp -r cmake-3.25.1-linux-x86_64/bin/* /usr/local/bin/ && \
    cp -r cmake-3.25.1-linux-x86_64/share/* /usr/local/share/ && \
    rm -rf /tmp/cmake-3.25.1*

COPY layers/crewai/requirements.txt /tmp/crewai-requirements.txt
COPY layers/common/requirements.txt /tmp/common-requirements.txt
COPY intent-requirements-service/requirements-lambda.txt /tmp/requirements.txt

RUN pip install --upgrade pip setuptools wheel && \
    echo "Installing common dependencies..." && \
    pip install --no-cache-dir --prefer-binary --retries 3 -r /tmp/common-requirements.txt && \
    echo "Installing crewai dependencies..." && \
    pip install --no-cache-dir --prefer-binary --retries 3 -r /tmp/crewai-requirements.txt && \
    echo "Installing service-specific dependencies..." && \
    pip install --no-cache-dir --prefer-binary --retries 3 -r /tmp/requirements.txt

RUN echo "Verifying critical imports..." && \
    python -c "import crewai; print('✅ crewai imported')" && \
    python -c "import langchain; print('✅ langchain imported')" && \
    python -c "import langchain_openai; print('✅ langchain_openai imported')" && \
    python -c "import fastapi; print('✅ fastapi imported')" && \
    python -c "import boto3; print('✅ boto3 imported')" && \
    echo "✅ All critical imports successful"

COPY intent-requirements-service/ ${LAMBDA_TASK_ROOT}/

WORKDIR ${LAMBDA_TASK_ROOT}

CMD [ "main.lambda_handler" ]